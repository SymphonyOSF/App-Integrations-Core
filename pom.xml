    <profiles>
        <profile>
            <id>RPM</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file>
                    <exists>./src/main/webapp/WEB-INF/web.xml</exists>
                </file>
                <property>
                    <name>build.rpm</name>
                    <value>true</value>
                </property>
